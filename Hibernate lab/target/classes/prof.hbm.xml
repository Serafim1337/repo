<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="prof.hibernate.prof" table="prof_hibernate">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="edu" column="edu" type="string"/>
        <property name="diff" column="diff" type="string"/>
        <property name="salary" column="salary" type="string"/>
    </class>

</hibernate-mapping>